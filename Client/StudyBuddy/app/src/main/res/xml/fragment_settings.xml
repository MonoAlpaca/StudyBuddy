<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Settings">
    <PreferenceCategory
        android:title="Notification Settings"
        android:key="settingsNotification">

        <CheckBoxPreference
            android:title="Allow Notifications"
            android:defaultValue="true"
            android:key="notificationSettings" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="User Settings"
        android:key="settingsUser">

        <ListPreference
            android:title="Theme"
            android:summary="Change the StudyBuddy theme"
            android:key="theme"
            android:defaultValue="1"
            android:entries="@array/colorArray"
            android:entryValues="@array/colorValues" />

        <Preference
            android:title="Block List"
            android:summary="Manage blocked users"
            android:key="settingsBlockList"/>

        <Preference
            android:title="Logout"
            android:summary="Log out of current account"
            android:key="settingsLogout"/>

        <Preference
            android:title="Reset"
            android:key="settingsReset"
            android:summary="Reset all user data"/>
    </PreferenceCategory>
</PreferenceScreen>