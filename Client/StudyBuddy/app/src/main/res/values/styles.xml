<resources>

    <!-- Base application theme. -->
    <style name="DefaultTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
    </style>
    <style name="BlackTheme" parent="DefaultTheme">

    </style>
    <style name="AppTheme" parent="DefaultTheme">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:typeface">serif</item>
        <item name="colorPrimary">@color/old_gold</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHighlight">@color/old_gold</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textColorHighlightInverse">@color/old_gold</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="colorControlNormal">@color/old_gold</item>
        <item name="colorControlActivated">@color/old_gold</item>
        <item name="colorControlHighlight">@color/old_gold</item>


    </style>
    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#808080</item>
    </style>



    <style name="AppTheme.ActionBar" parent="android:Theme.Holo.Light">
    </style>

    <style name="AppTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>
    <attr name="progressButtonStyle" format="reference" />


    <declare-styleable name="ProgressButton">
        <attr name="android:clickable" />
        <attr name="android:focusable" />
        <attr name="defaultBackgroundColor" format="color" />
        <attr name="defaultFontSize" format="integer" />
        <attr name="defaultFontColor" format="color" />
        <attr name="defaultText" format="string" />
    </declare-styleable>
    <style name="ProgressButton" />

    <!-- Base theme for the Progress button. -->
    <style name="ProgressButton.attrs">
        <item name="defaultBackgroundColor">@color/white_color</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="defaultFontSize">40</item>
        <item name="defaultFontColor">@color/black_color</item>
        <item name="defaultText">Login</item>
    </style>

</resources>
