<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/profilePicture"
        android:src="@drawable/blankphoto"
        android:layout_row="0"
        android:layout_column="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Your Name"
        android:textSize="15dp"
        android:id="@+id/profileName"
        android:background="@android:color/transparent"
        android:layout_row="0"
        android:layout_column="1" />

    <TextView
        android:layout_width="101dp"
        android:layout_height="25dp"
        android:text="Bio"
        android:textStyle="bold"
        android:id="@+id/bioText"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Write about yourself here"
        android:textSize="15dp"
        android:id="@+id/profileBio"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="top" />

    <TextView
        android:layout_width="69dp"
        android:layout_height="25dp"
        android:text="Courses"
        android:textStyle="bold"
        android:id="@+id/coursesText"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Added courses appear here"
        android:id="@+id/profileCourses"
        android:background="@android:color/transparent"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:text="Interests"
        android:textStyle="bold"
        android:id="@+id/interestsText"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="List some interests here"
        android:textSize="15dp"
        android:id="@+id/profileInterests"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="2" />

    <Button
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:onClick="switchToEditProfile"
        android:id="@+id/saveChangesButton"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_columnSpan="2" />

</GridLayout>

