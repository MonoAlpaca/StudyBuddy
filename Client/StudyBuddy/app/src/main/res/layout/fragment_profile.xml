<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/profilePicture"
            android:src="@drawable/blankphoto"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/editPictureButton"
            android:src="@drawable/editicon"
            android:onClick="switchToEditPicture"
            android:background="@android:color/transparent"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="right" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0">

        <TextView
            android:layout_width="199dp"
            android:layout_height="35dp"
            android:text="Name"
            android:textStyle="bold"
            android:id="@+id/profileName"
            android:layout_row="0"
            android:layout_column="2" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/editProfileButton1"
            android:src="@drawable/editicon"
            android:onClick="switchToEditProfile"
            android:background="@android:color/transparent"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="right" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0">

        <TextView
            android:layout_width="34dp"
            android:layout_height="25dp"
            android:text="Bio"
            android:textStyle="bold"
            android:id="@+id/bioText"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="top" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/editProfileButton2"
            android:src="@drawable/editicon"
            android:onClick="switchToEditProfile"
            android:background="@android:color/transparent"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_rowSpan="2"
            android:layout_gravity="top|right" />

        <TextView
            android:layout_width="314dp"
            android:layout_height="100dp"
            android:text="bio text here"
            android:id="@+id/profileBio"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:id="@+id/progressBar"
            android:layout_gravity="center_horizontal" />

    </FrameLayout>

    <TextView
        android:layout_width="69dp"
        android:layout_height="25dp"
        android:text="Courses"
        android:textStyle="bold"
        android:id="@+id/coursesText"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="1" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/addCoursesButton"
        android:src="@drawable/editicon"
        android:onClick="switchToClasses"
        android:background="@android:color/transparent"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_rowSpan="2" />

    <TextView
        android:layout_width="121dp"
        android:layout_height="100dp"
        android:text="course list here"
        android:id="@+id/profileCourses"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="8" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:text="Interests"
        android:textStyle="bold"
        android:id="@+id/interestsText"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="1" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/editProfileButton3"
        android:src="@drawable/editicon"
        android:onClick="switchToEditProfile"
        android:background="@android:color/transparent"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_rowSpan="2" />

    <TextView
        android:layout_width="118dp"
        android:layout_height="100dp"
        android:text="interests here"
        android:id="@+id/profileInterests"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="8" />

</GridLayout>

