<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team18.studybuddy.studybuddy"
    android:versionCode="2"
    android:versionName="1.1" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_black"
        android:screenOrientation="portrait"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >

        </activity>
        <activity

            android:name=".CASClient"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:screenOrientation="portrait"
            android:label="@string/title_section4" >
        </activity>
        <activity
            android:name=".ChatTab"
            android:screenOrientation="portrait"
            android:label="@string/title_section4"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".CourseNewsfeed"
            android:screenOrientation="portrait"
            android:label="@string/title_section4"
            android:windowSoftInputMode="adjustPan"  >
        </activity>
        <activity
            android:name=".Courses"
            android:screenOrientation="portrait"
            android:label="Courses" >
        </activity>
        <activity
            android:name=".CoursePage"
            android:screenOrientation="portrait"
            android:label="CoursePage" >
        </activity>
        <activity
            android:name=".Interests"
            android:screenOrientation="portrait"
            android:label="Interests" >
        </activity>
        <activity
            android:name=".Profile"
            android:screenOrientation="portrait"
            android:label="Profile" >
        </activity>
        <activity
            android:name=".ChatSessionFrag"
            android:screenOrientation="portrait"
            android:label="ChatSessionFrag" >
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>
